  color: var(--color-text-muted);
  margin-bottom: var(--spacing-md);
}

.scraperStatus {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: rgba(251, 191, 36, 0.1);
  border: 1px solid rgba(251, 191, 36, 0.3);
  border-radius: var(--radius-sm);
  color: #fbbf24;
  font-size: 0.875rem;
  font-weight: 500;
